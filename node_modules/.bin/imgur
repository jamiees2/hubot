#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//usr/local/bin/node" ]; then
  "$basedir//usr/local/bin/node"  "$basedir/../node-imgur/bin/cli.js" "$@"
  ret=$?
else 
  /usr/local/bin/node  "$basedir/../node-imgur/bin/cli.js" "$@"
  ret=$?
fi
exit $ret
